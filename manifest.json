{
  "manifest_version": 3,
  "name": "__MSG_appTitle__",
  "version": "1.0.0",
  "description": "__MSG_appDescription__",
  "default_locale": "pt_BR",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Deep Breath"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*",
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "calm.mp3"
      ],
      "matches": [
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.youtube.com/*"
      ]
    }
  ]
}